<p id="notice"><%= notice %></p>
<div class="container">
  <div class="jumbotron">
    <h1>Timeline</h1>
    <%= render 'form' %>
  </div>

<% @posts.each do |post| %>
  <hr>
  <div class="row post">
    <div class="columns large-9 medium-6">
      <blockquote>
        <%= link_to content_tag('h3',post.message), post %>
        <cite><%= link_to post.user.name, profile_path(post.user.username) %> - <em><%= time_ago_in_words(post.created_at) %> ago</em></cite>
      </blockquote>
    </div>
    <div class="columns large-3 medium-6">
      <%= link_to edit_post_path(post) do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>
        
      <%= link_to  post, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      <%end%>
    </div>
  </div>
<% end %>

</div>