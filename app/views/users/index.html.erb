<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<% @users.each do |user| %>
  <% if current_user != user %>
    <div class="row post">
      <div class="columns large-9 medium-6">
        <blockquote>
          <%= link_to user.name, profile_path(user.username) %>
          <cite>"<%= user.description%>"<em>-<%= user.location%></em></cite>
        </blockquote>
        <% if current_user.following.include?(user)%>
          <%= render 'unfollow', user: user %>
        <% else %>
          <%= render 'follow', user: user %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
 
